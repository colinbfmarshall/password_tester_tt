<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">
    <h4>How secure is my password?</h4>
  </div>
  <div class="panel-body">
    <p>
    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi quis velit augue. Lorem ipsum dolor sit amet, consectetur adipiscing elit. 
    </p>
    <%= link_to 'New Query', new_query_path, class:'btn btn-default' %>
  </div>

  <!-- Table -->
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Password</th>
        <th>Result</th>
        <th>Roughly how long?</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @queries.each do |query| %>
        <tr>
          <td><%= query.password %></td>
          <td><%= query.result %></td>
          <td><%= distance_of_time_in_words(query.result, 0, include_seconds: true) %></td>
          <td><%= link_to 'Show', query %></td>
          <td><%= link_to 'Edit', edit_query_path(query) %></td>
          <td><%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>